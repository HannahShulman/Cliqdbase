<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:contentDescription="@string/user_profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_profile_image_view"
        />


    <ProgressBar android:id="@+id/profile_image_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_alignBottom="@+id/user_profile_image_view"
        android:layout_centerInParent="true"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_profile_image_view"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="#aa000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/user_profile_name"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="3"
            android:id="@+id/user_profile_age"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_profile_name"
            android:layout_toEndOf="@+id/user_profile_name"
            android:textColor="#DACCCC"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/user_profile_location"
            android:layout_alignTop="@+id/user_profile_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#DACCCC"
            />
        
        </RelativeLayout>



</RelativeLayout>